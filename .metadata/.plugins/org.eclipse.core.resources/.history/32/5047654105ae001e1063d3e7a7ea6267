package coverFoxUtility;


import java.io.FileInputStream;
import java.io.IOException;

import org.apache.poi.EncryptedDocumentException;
import org.apache.poi.ss.usermodel.Sheet;
import org.apache.poi.ss.usermodel.WorkbookFactory;
import java.text.SimpleDateFormat;
import java.util.Date;
import java.util.logging.FileHandler;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.testng.Reporter;
public class  UtilityClass {
	
	// data from Excel Sheet
	public static String  readDataFromExcell (int row , int cell) throws EncryptedDocumentException, IOException
	{
		FileInputStream myFile = new FileInputStream("E:\\29 july excell sheet\\Book1.xlsx");
		Sheet mySheet = WorkbookFactory.create(myFile).getSheet("CoverFox");
		 String data = mySheet.getRow(row).getCell(cell).getStringCellValue();
		return data;
		
	}
	 
	// data from
	public static void takeScreenShot(WebDriver driver,String TCID) throws IOException
	{
	        Reporter.log("Taking screenshot", true);
	   String timeStamp= new  SimpleDateFormat("yyyy.MM.dd.HH.mm.ss").format(new Date());

	File src = ((TakesScreenshot)driver).getScreenshotAs(OutputType.FILE);
	File dest=new File("E:\\Screenshot Study\\coverFox"+TCID+"_"+timeStamp+".png");
	Reporter.log("Saved screenshot at "+dest, true);
	org.openqa.selenium.io.FileHandler.copy(src, dest);
	}
	
	
	
	
	
	
}

       



















